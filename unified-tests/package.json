{
  "name": "microservices-unified-tests",
  "version": "1.0.0",
  "description": "Unified comprehensive testing suite for microservices platform",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest --testPathPattern=api",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:performance": "k6 run performance/k6-load-test.js",
    "test:user": "jest --testNamePattern=\"User Service\"",
    "test:audit": "jest --testNamePattern=\"Audit Service\"",
    "test:inventory": "jest --testNamePattern=\"Inventory Service\"",
    "test:notification": "jest --testNamePattern=\"Notification Service\"",
    "test:order": "jest --testNamePattern=\"Order Service\"",
    "test:all": "jest --verbose",
    "test:staging": "NODE_ENV=staging jest",
    "test:production": "NODE_ENV=production jest",
    "setup": "node scripts/setup-environment.js",
    "cleanup": "node scripts/cleanup.js",
    "mock": "node scripts/mock-setup.js",
    "test:with-mocks": "npm run mock & sleep 3 && npm test; kill %1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "supertest": "^6.3.3",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.2"
  }
}
