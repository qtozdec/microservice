# ===========================================
# Inventory Service Environment Variables
# ===========================================

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/inventory_service_db
SPRING_DATASOURCE_USERNAME=your_db_username
SPRING_DATASOURCE_PASSWORD=your_db_password
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# JPA/Hibernate Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# Server Configuration
SERVER_PORT=8084
SPRING_APPLICATION_NAME=inventory-service

# Management/Actuator
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when-authorized
MANAGEMENT_METRICS_EXPORT_PROMETHEUS_ENABLED=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# WebSocket Configuration
WEBSOCKET_ENDPOINT=/ws
WEBSOCKET_ALLOWED_ORIGINS=*
WEBSOCKET_MESSAGE_SIZE_LIMIT=64000
WEBSOCKET_BUFFER_SIZE_LIMIT=32768

# Kafka Configuration
SPRING_KAFKA_BOOTSTRAP_SERVERS=localhost:9092
SPRING_KAFKA_PRODUCER_KEY_SERIALIZER=org.apache.kafka.common.serialization.StringSerializer
SPRING_KAFKA_PRODUCER_VALUE_SERIALIZER=org.springframework.kafka.support.serializer.JsonSerializer

# Stock Management Configuration
LOW_STOCK_THRESHOLD=10
OUT_OF_STOCK_THRESHOLD=0
STOCK_ALERT_ENABLED=true
AUTO_REORDER_ENABLED=false
AUTO_REORDER_QUANTITY=50

# External Service URLs
NOTIFICATION_SERVICE_URL=http://localhost:8083
AUDIT_SERVICE_URL=http://localhost:8085
SUPPLIER_API_URL=https://api.supplier.com/v1

# File Storage (for product images)
FILE_STORAGE_LOCATION=./uploads/products/
MAX_FILE_SIZE=5MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# Search Configuration (if using Elasticsearch)
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=products

# Cache Configuration
SPRING_CACHE_TYPE=redis
SPRING_REDIS_HOST=localhost
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=your_redis_password

# Product Import/Export
PRODUCT_IMPORT_BATCH_SIZE=100
PRODUCT_EXPORT_FORMAT=csv,json,xml

# Logging
LOGGING_LEVEL_COM_MICROSERVICES_INVENTORY=DEBUG
LOGGING_PATTERN_CONSOLE=%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level [%logger{36}] - %msg%n

# Business Rules
NEGATIVE_STOCK_ALLOWED=false
STOCK_RESERVATION_TIMEOUT=900000
PRICE_DECIMAL_PLACES=2
DEFAULT_CURRENCY=USD

# Barcode Integration
BARCODE_API_URL=https://api.barcode.com/lookup
BARCODE_API_KEY=your_barcode_api_key

# Supplier Integration
SUPPLIER_SYNC_ENABLED=false
SUPPLIER_SYNC_INTERVAL=3600000
SUPPLIER_API_KEY=your_supplier_api_key