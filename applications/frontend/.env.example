# ===========================================
# Frontend Application Environment Variables
# ===========================================

# Application Configuration
VITE_APP_NAME=Microservices Platform
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# API Configuration - Using Ingress
VITE_API_BASE_URL=http://microservices.local
VITE_API_TIMEOUT=10000

# WebSocket Configuration
VITE_WEBSOCKET_URL=ws://microservices.local/ws
VITE_WEBSOCKET_RECONNECT_INTERVAL=5000
VITE_WEBSOCKET_MAX_RECONNECT_ATTEMPTS=10

# Authentication
VITE_JWT_STORAGE_KEY=microservices_token
VITE_JWT_REFRESH_STORAGE_KEY=microservices_refresh_token
VITE_SESSION_TIMEOUT=1800000

# Feature Flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=false

# UI Configuration
VITE_DEFAULT_LANGUAGE=en
VITE_DEFAULT_THEME=light
VITE_ITEMS_PER_PAGE=20
VITE_MAX_FILE_SIZE=5242880

# External Services
VITE_GOOGLE_ANALYTICS_ID=your_google_analytics_id
VITE_SENTRY_DSN=your_sentry_dsn
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# Development Configuration
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_HOT_RELOAD=true

# Build Configuration
VITE_BUILD_PATH=build
VITE_PUBLIC_PATH=/
VITE_SOURCE_MAP=true

# Security
VITE_CSP_NONCE=your_content_security_policy_nonce
VITE_ALLOWED_HOSTS=localhost,microservices.local

# Performance
VITE_LAZY_LOADING_ENABLED=true
VITE_IMAGE_OPTIMIZATION=true
VITE_BUNDLE_ANALYZER=false

# Monitoring URLs (for status pages)
VITE_PROMETHEUS_URL=http://localhost:9090
VITE_GRAFANA_URL=http://localhost:3000
VITE_KIBANA_URL=http://localhost:5601
VITE_ARGOCD_URL=http://localhost:8080